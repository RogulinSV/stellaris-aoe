### Uninhabitable Planets

entity = {
    name = "mercurium_uninhabitable_planet_01_entity"
    pdxmesh = "planet_no_pole_no_clouds_mesh"

    meshsettings = {
        name = "planet_geosphereShape"
        texture_diffuse = "mercurium_05_diffuse.dds"
        texture_normal = "mercurium_05_normal.dds"
        texture_specular = "mercurium_05_specular.dds"
    }

    default_state = "idle"
    state = { name = "idle" animation = "idle" time_offset = { 0 100 }
        start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
    }
}

entity = {
    name = "mercurium_uninhabitable_planet_02_entity"
    pdxmesh = "planet_clouded_mesh"

    meshsettings = {
        name = "planet_geosphereShape"
        texture_diffuse = "mercurium_06_diffuse.dds"
        texture_normal = "mercurium_06_normals.dds"
        texture_specular = "mercurium_06_specular.dds"
    }

    ##cloud texture override
    meshsettings = {
        name = "clouds_geosphereShape"
        texture_diffuse = "mercurium_clouds_02_diffuse.dds"
        texture_normal = "mercurium_clouds_02_normal.dds"
        texture_specular = "clouds_medium_specular.dds"
    }

    ##cloud shadow texture override
    meshsettings = {
        name = "clouds_shadow_geosphereShape"
        texture_diffuse = "mercurium_clouds_shadow_02_diffuse.dds"
        texture_normal = "nonormal.dds"
        texture_specular = "nospec.dds"
    }

    default_state = "idle"
    state = { name = "idle" animation = "idle" time_offset = { 0 100 }
        start_event = { trigger_once = yes sound = { soundeffect = "amb_planet_class" } }
    }
}

